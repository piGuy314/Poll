<div class= "container center-text">
  <div class= "text-center">
  <h1>Welcome to Poll! </h1>
  <h3>A site that gathers opinions.</h3>
</div>
<div class="container home-signup-links">

<% if user_signed_in? %>
  <div class="col-md-6">
    <div class="well">
      <h2 class="text-center"> Your Profile</h2>
      <%if current_user.profile %>
      <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
      <%= link_to "View your profile", user_path(current_user.id), class: 'btn btn-default btn-lg btn-block' %>
      <% else %>
      <%= link_to "Create your profile!", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>

      <% end %>
    </div>
  </div>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">The Community</h2>
          <p>Visit the community to see all public polls!</p>
          <%= link_to "Visit the community", users_path, class: 'btn btn-default btn-lg btn-block'%>

    </div>
  </div>
  <% else %>
    <!-- Basic Membership -->
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Basic Membership</h2>
        <h4 class="text-center">Sign up for free and get basic access to the community.</h4>
        <br>

        <!-- Using Query string parameters, we can pass info via URL -->
        <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>

    <!-- Pro Membership -->
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Pro Membership</h2>
        <h4 class="text-center">Get access to the community and contact info for only $10/month!</h4>
        <br>
        <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
      </div>
    </div>

  <% end %>
</div>
